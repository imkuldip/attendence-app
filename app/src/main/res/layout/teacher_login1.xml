    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/spinner_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            style="@style/spinnertextviewstyle"
            android:text="Program"/>
        <Spinner
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/teacherprogram"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/spinner_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:text="Semester"
            style="@style/spinnertextviewstyle"/>
        <Spinner
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/teachersemester"
            />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Batch  Eg: 2014"
        android:background="@drawable/spinner_selector"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textColorHint="#da96b6"
        android:id="@+id/batch"
        />

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/spinner_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:text="Section"
            style="@style/spinnertextviewstyle"/>
        <Spinner
            android:layout_width="180dp"

            android:layout_height="wrap_content"
            android:id="@+id/teachersection"
            />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/spinner_selector"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:text="Subject"
            style="@style/spinnertextviewstyle"/>
        <Spinner
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/teachersubject"

            />
    </LinearLayout>

    <Button

        android:text="Next"
        android:background="@drawable/btn_selector"
        style="@style/btnstyle"
        android:id="@+id/teachernext"
        />

</LinearLayout>
